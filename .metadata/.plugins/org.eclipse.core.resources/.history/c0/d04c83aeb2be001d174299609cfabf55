void delay_us(uint16_t us)
	{
		htim2.Instance->CNT = 0;
		HAL_TIM_Base_Start(&htim2);
		while(htim2.Instance->CNT < us);
		HAL_TIM_Base_Stop(&htim2);
	}

uint8_t Hum_byte1, Hum_byte2, Temp_byte1, Temp_byte2;
